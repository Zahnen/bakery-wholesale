@using BakeryWholesale.Models;

<h1>This is the view of the Index found within Vendors</h1>


<h1>Vendors</h1>

@if (Model.Count == 0)
{
  <p>No Vendors have been added</p>
}
<ul>
@foreach (Vendor vendor in Model)
{
  <li><a href="/vendors/@vendor.Id">@vendor.VendorName</a></li>
}
</ul>

<a href="/vendors/new">Add a New Vendor</a>