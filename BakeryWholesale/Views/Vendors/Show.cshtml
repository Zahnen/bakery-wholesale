@{
  Layout = "_Layout";
}

@using BakeryWholesale.Models;
<div class="container">
<h3>Here are all pending orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model["order"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.OrderName</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order for this vendor.</a></p>
</div>
