@{
  Layout = "_Layout";
}

@using BakeryWholesale.Models;

<h1>Vendor Hub</h1>
<h3>Vendors added to Rise OMS are found here. Click the vendor's name to view/add orders associated with the vendor.</h3>
<div class="vendorHub">
  @if (Model.Count == 0)
  {
    <p>No Vendors have been added. Click the link below to add a new Vendor to your Vendor hub.</p>
  }
  @foreach (Vendor vendor in Model)
  {
    <p><a class="vendorDisplay" href="/vendors/@vendor.Id">@vendor.VendorName</a></p>
  }
  <a href="/vendors/new">Add a new vendor</a>
</div>
